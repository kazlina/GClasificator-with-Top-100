# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()
GET     /ind                    controllers.Application.ind()
GET     /admin/words            controllers.Application.words()
POST    /admin/words            controllers.Application.newWord()
POST    /admin/words/:id/delete controllers.Application.deleteWord(id: Long)

GET     /admin/synonyms/:wid    controllers.Application.synonyms(wid: Long)
POST    /admin/synonyms/:wid    controllers.Application.addSynonym(wid: Long)
POST    /admin/synonyms/:wid/:sid/delete controllers.Application.deleteSynonym(wid: Long, sid: Long)
                                

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
